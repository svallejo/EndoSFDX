<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
        <fullName>SPARTADMS__Check_for_Template_Type</fullName>
        <active>true</active>
        <description>If Document Type is Template only then Template type need to be filled</description>
        <errorConditionFormula>IF(ISPICKVAL( SPARTADMS__Document_Type__c ,'Template (TPT)'),
ISPICKVAL( SPARTADMS__Template_Type__c ,'') 
,
false
)</errorConditionFormula>
        <errorDisplayField>SPARTADMS__Template_Type__c</errorDisplayField>
        <errorMessage>Template Type field should not be blank for Document Type  Template (TPT)</errorMessage>
    </ValidationRule>
