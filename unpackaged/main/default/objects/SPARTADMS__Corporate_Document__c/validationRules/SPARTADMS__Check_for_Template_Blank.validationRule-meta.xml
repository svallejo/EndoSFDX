<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
        <fullName>SPARTADMS__Check_for_Template_Blank</fullName>
        <active>true</active>
        <description>If Document Type is Template only then Template type need to be filled</description>
        <errorConditionFormula>IF(NOT(ISPICKVAL( SPARTADMS__Document_Type__c ,'Template (TPT)')), NOT(ISPICKVAL( SPARTADMS__Template_Type__c ,'')), false)</errorConditionFormula>
        <errorDisplayField>SPARTADMS__Template_Type__c</errorDisplayField>
        <errorMessage>Template Type field should be blank for Document Type other than Template (TPT)</errorMessage>
    </ValidationRule>
