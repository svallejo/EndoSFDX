               "sInfoEmpty":      showing +"_START_"+ to+ "_END_"+ of + "_TOTAL_" + entries,
               "sInfoFiltered":   filteredFrom +" "+ "_MAX_"+" "+ totalEntries,
               "sSearch":         search,
               "sLengthMenu":     show +"_MENU_" + entries,
